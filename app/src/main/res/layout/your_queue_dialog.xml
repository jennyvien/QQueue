<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yourQueueDialog"
    android:orientation="vertical"
    android:layout_width="@dimen/fragment_width"
    android:layout_height="@dimen/fragment_height"
    android:weightSum="5"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yourQueueHeader"
            android:textSize="@dimen/title_text"
            android:id="@+id/yourQueueHeader"
            android:textColor="@color/cardview_light_background"
            android:textAlignment="center"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yourQueueContent"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_weight="3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:id="@+id/okbutton"
            android:onClick="okClicked"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_save_white_24dp"
            android:backgroundTint="#00000000"
            android:clickable="true"
            android:onClick="starred"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</LinearLayout>
